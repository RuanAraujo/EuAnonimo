<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="euanon.DescubraPage"
             Title="Descubra"
             BackgroundColor="#E0F7FA">
    <ContentPage.Content>
        <StackLayout Padding="60" HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
            <ListView IsPullToRefreshEnabled="True"
                      RefreshCommand="{Binding Mensagem}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="Texto" Detail="Detail"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>