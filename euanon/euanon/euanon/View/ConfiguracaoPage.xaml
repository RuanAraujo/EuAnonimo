<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="euanon.View.ConfiguracaoPage"
             BackgroundColor="#E0F7FA"
             Title="Configuração">
    <ContentPage.Content>
        <StackLayout Padding="60">
            <Label Text="Nosso aplicativo permite posts e leitura offline e por isso guardados dados em seu celular! Você pode limpar esses dados por aqui!" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
            <Button Text="Limpar dados" Command="{Binding CleanLocalDataCommand}" BackgroundColor="#00838F" TextColor="WhiteSmoke"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>